{
  "name": "jdial-frontend",
  "version": "0.1.0",
  "author": "Isaac Evavold <isaacevavold@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "postinstall": "gulp build"
  },
  "dependencies": {
    "clipboard": "^1.6.1",
    "codemirror": "^5.24.2",
    "express": "^4.15.2",
    "jquery": "^3.1.1",
    "localforage": "^1.5.0",
    "mousetrap": "^1.6.0",
    "primer-core": "^2.0.0",
    "primer-css": "^5.0.0",
    "superagent": "^3.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-runtime": "^6.23.0",
    "del": "^2.2.2",
    "eslint": "^3.17.1",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.0.3",
    "gulp-concat": "^2.6.1",
    "gulp-minify": "^0.0.15",
    "gulp-rename": "^1.2.2",
    "gulp-rollup": "^2.11.0",
    "gulp-sass": "^3.1.0",
    "gulp-standard": "^9.0.0",
    "node-sass": "^4.5.0",
    "primer-support": "^3.0.1",
    "rollup-plugin-babel": "^2.7.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "Clipboard",
      "CodeMirror",
      "jQuery",
      "localforage",
      "superagent"
    ]
  },
  "paths": {
    "dist": "dist",
    "scripts": {
      "all": "src/scripts/**/*.js",
      "main": "src/scripts/app-view.js",
      "bundle": "app.min.js",
      "vendors": "vendor.min.js",
      "components": {
        "codemirror": "codemirror/lib/codemirror.js",
        "codemirror-mode": "codemirror/mode/clike/clike.js",
        "jquery": "jquery/dist/jquery.slim.js",
        "localforage": "localforage/dist/localforage.js",
        "mousetrap": "mousetrap/mousetrap.js",
        "superagent": "superagent/superagent.js",
        "clipboard": "clipboard/dist/clipboard.min.js"
      }
    },
    "styles": {
      "all": "src/styles/**/*.scss",
      "main": "src/styles/style.scss",
      "bundle": "app.min.css",
      "vendors": "vendor.min.css",
      "components": {
        "codemirror": "codemirror/lib/codemirror.css",
        "codemirror-theme": "codemirror/theme/neat.css",
        "primer": "primer-css/build/build.css"
      }
    },
    "config": {
      "gulpfile": "gulpfile.js"
    }
  }
}
